# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myeline_db
DB_USER=myeline_user
DB_PASSWORD=your_secure_password

# Server Configuration
PORT=3001
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# Security
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_for_medical_data

# External APIs
WEATHER_API_KEY=your_weather_api_key
AI_SERVICE_API_KEY=your_ai_service_key

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=notifications@myeline.com
SMTP_PASS=your_smtp_password

# WebSocket Configuration
WS_PORT=3002

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,video/mp4

# Healthcare Compliance
AUDIT_LOG_RETENTION_DAYS=2555
DATA_ENCRYPTION_ENABLED=true
HIPAA_COMPLIANCE_MODE=true